<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"
    tools:context=".ui.fragment.AddUpdateFragment">


    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/et_name"
        android:singleLine="true"
        android:inputType="text"
        android:imeOptions="actionNext"
        android:hint="Name"
        />
    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_name"
        android:id="@+id/et_email"
        android:imeOptions="actionNext"
        android:inputType="textEmailAddress"
        android:singleLine="true"
        android:hint="Email"
        />
    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_email"
        android:id="@+id/et_phone"
        android:imeOptions="actionNext"
        android:inputType="phone"
        android:singleLine="true"
        android:hint="Phone"
        />

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_phone"
        android:id="@+id/et_department"
        android:hint="Department"
        android:inputType="text"
        android:imeOptions="actionNext"
        android:singleLine="true"
        />
    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_department"
        android:id="@+id/et_age"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:singleLine="true"
        android:hint="Age"
        />
    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_age"
        android:editable="false"
        android:id="@+id/et_date"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:hint="Date"
        />

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_date"
        android:id="@+id/et_salary"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:inputType="numberDecimal"
        android:hint="Salary"
        />
    <com.google.android.material.textfield.MaterialAutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_salary"
        android:id="@+id/et_assignment"
        android:text="Assignment1"
        android:editable="false"
        android:imeOptions="actionNext"
        android:singleLine="true"
        />

      <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@id/et_assignment"
        android:id="@+id/et_address"
          android:gravity="top"
          android:paddingStart="10dp"
        android:hint="Address (Optional)"
        />


    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Submit"
        android:inputType="text"
        android:id="@+id/btn_submit"
        />
</androidx.constraintlayout.widget.ConstraintLayout>